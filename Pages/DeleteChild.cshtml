@page "{id:int}"
@model MedicalJourneyLog.Pages.DeleteChildModel
@{
    ViewData["Title"] = "Delete Child";
}

<h2>Delete Child</h2>

@if (!string.IsNullOrWhiteSpace(Model.BlockReason))
{
    <div class="alert alert-warning">@Model.BlockReason</div>
}

<div class="mb-3">
    <strong>Name:</strong> @Model.Child.Name <br />
    <strong>Date of Birth:</strong> @(Model.Child.DateOfBirth?.ToString("yyyy-MM-dd") ?? "â€”")
</div>

<form method="post">
    <input type="hidden" asp-for="Child.Id" />
    <button type="submit" class="btn btn-danger"
            onclick="return confirm('Are you sure you want to delete this child?');">
        Delete
    </button>
    <a asp-page="/ChildDetails" asp-route-id="@Model.Child.Id" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
